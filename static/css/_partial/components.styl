.card {
    margin-top: 20px;
    padding: 20px;
    background-color: #fff;
    overflow: hidden;
    border-radius: 2px;
    box-shadow: 0 1px 3px rgba(26,26,26,.2);
    border: 1px #333;;
}

.button {
    padding: 0 10px;
    line-height: 2em;
    border: 1px solid #ddd;
    border-radius: 2px;
    box-shadow: 0 1px 3px rgba(26,26,26,0.2);
    transition: 0.3s all;
}

.list {
    margin: 10px 0;
    padding: 3px 5px;
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 1px 3px rgba(26,26,26,0.2);
}

.list a{
    color: #2988de;
    font-weight: 600;
    line-height: 1.5em;
}