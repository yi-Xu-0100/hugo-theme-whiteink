.mobile, #gotop.mobile.headroom.headroom--top, .gotop {
    display: none;//
}

.mobile-header {
    background-color: #007fff;
}

.mobile-title {
    color: #fff !important;
}

@media (max-width: 500px) {
    #mobile-avatar{
        display: block;
    }
    #mobile-avatar {
        display: block;
        width: 36px;
        position: fixed;
        border-radius: 30px;
        margin-top: calc((60px - 36px) /2);
        top: 0;
        left: 20px;
        z-index: 120;
        
    }
    #gotop {
        position: fixed;
        border-radius: 30px;
        margin-top: calc((60px - 36px) /2);
        top: 0;
        right: 20px;
        width: fit-content;
        z-index: 120;
        
    }
    #mobile-navbar {
        display: block;
        position: absolute;
        border-radius: 30px;
        margin-top: calc((60px - 36px) /2);
        top: 0;
        right: 20px;
        width: fit-content;
        z-index: 130;
    }
}

#jquery-menu {
    position: absolute;
    top: 60px;
    z-index: 999;
    background-color: #43a1ff;
    width: 100%;
}

#jquery-menu ul {
    margin: 0;
    padding: 0;
    list-style: none;
    width: 100%;
}
#jquery-menu ul li {
    width: 100%;
    display: block;
}

#jquery-menu ul li a, #mobile-toc-title{
    width: 100%;
    float: right;
    line-height: 1.8em;
}

#jquery-menu ul li:hover>a {
    background-color: #007fff;
    color: #fff;
}

#mobile-toc {
    margin: 0;
    padding: 0;
    width: 100%;
}

#mobile-menu>li {
    padding-left: 5px;
}

#mobile-toc{
     ul {
        margin: 0;
        padding: 0;
        list-style: none;
        width: 100%;
        line-height: 1.8em;
        display: block;
        float: left;
    }
    li {
        list-style: none;
        margin: 0;
        padding:0;
        display: block;
        float:left;
    }
    a {
        float: left;
        padding-left: 5px;
    }
}

#mobile-toc ul li:hover>a {
    border-left: 3px solid #333;
    color: #fff;
}

#mobile-toc ul li a {
    width: 100%;
}

.headroom--unpinned {
    top: -100px !important;
    transition: all .2s ease-in-out;
}
.headroom--pinned {
    position: fixed;
    top: 0;
    right: 0;
    transition: all .2s ease-in-out;
    z-index: 99;
}
.headroom--bottom {
    position: fixed;
    top: 0 !important;
    right: 0;
    transition: all .2s ease-in-out;
    z-index: 99;
}
