#post {
    overflow: hidden;
    margin: 20px auto 0 auto;
}


#post-title {
    text-align: center;
    border-bottom: 5px solid rgba(0,0,0,0.8);
}

#post-title h1 {
    font-size: 24px;
    border: 0;
    background: unset;
    margin: 0;
    padding: 0;
    line-height: 1.5em;
}

#post h2 {
  border-left: 5px solid #03a9f4;
}

#post h3 {
  border-left: 5px solid #3f51b5;
}

#post h4 {
  border-left: 5px solid #ff7043;
}

#post h5 {
  border-left: 5px solid #aeea00;
}

#post h6 {
  border-left: 5px solid #00bfa5;
}

#post a{
    color: #0091ea;
}

.post-tags {
    margin-top: 20px;
    
}

@media (min-width: 670px) {
    .list-post {
        display: flex;
        justify-content: space-between;
    }
    .read-info {
        display: none;
        margin-left: -20px;
        margin-bottom: -20px;
        padding: 5px;
        font-size: 0.5em;
        color: #999;
    }
}

@media (max-width: 670px) {
    .read-info {
        display: none;
    }
}

div.list.list-post:hover .read-info {
    display: inline;
}