#post {
    overflow: hidden;
    margin: 20px auto 0 auto;
}


#post-title {
    text-align: center;
    border-bottom: 5px solid rgba(0,0,0,0.8);
}

#post-title h1 {
    font-size: 24px;
    border: 0;
    background: unset;
    margin: 0;
    padding: 0;
    line-height: 1.5em;
}

#post h2 {
  border-left: 5px solid #03a9f4;
}

#post h3 {
  border-left: 5px solid #3f51b5;
}

#post h4 {
  border-left: 5px solid #ff7043;
}

#post h5 {
  border-left: 5px solid #aeea00;
}

#post h6 {
  border-left: 5px solid #00bfa5;
}

#post a{
    color: #0091ea;
}

#copyright {
    width: fit-content;
    font-size: 0.8em;
    margin: 30px auto;
    padding: 10px 20px;
    background: #a6e22e;
    line-height: 1.8em;
    justify-content: center;
    font-weight: 600;
}

.copy-path {
    margin-left: 1em;
    color: #999;
}

#copyright:hover .copy-path {
    color: #333;
    cursor:pointer;
}

@media (min-width: 670px) {
    .list-post {
        display: flex;
        justify-content: space-between;
    }
}

.read-info {
    display: none;
    padding: 5px;
    font-size: 0.5em;
    color: #999;
}

div.list.list-post:hover .read-info {
    display: inline;
}

.center {
    text-align: center;
    height: 2.5em;
    font-weight: bold;
}

.pic {
    text-align: center;
    margin: 0;
    margin-top: 20px;
}
.pic br {
        display: none;
    }