.header {
    background: #fff;
    border-bottom: 1px solid #f1f1f1;
    box-shadow: 0 2px 5px -2px rgba(0, 0, 0, 0.05);
    color: #909090;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    font-size: 1.5em;
}

#site-title {
    color: #007fff;
}

#header-menu {
    margin: 0;
    padding: 0;
}

#header-menu .active {
    color: #007fff;
}

@media (min-width: 650px){
    #header-menu li {
        list-style: none;
        display: inline-block;
        padding: 0 18px;
    }
}
@media (max-width: 649px){
    #header-menu li {
        list-style: none;
        display: inline-block;
        padding: 0 0 0 5px;
    }
}