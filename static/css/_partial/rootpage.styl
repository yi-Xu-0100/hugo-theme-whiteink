@media (min-width: 650px){
    #rootpage {
        width: 61.8%;
        flex-basis: 61.8%;
    }

    .posts {
        margin-right: 20px;
    }
}

@media (max-width: 649px){
        #rootpage {
        width: 100%;
        flex-basis: 100%;
    }
}

#rootpage {
    overflow: hidden;
    margin: 0 auto;
}

.posts {
    background: #fff;
    margin-top: 24px;
    padding: 20px;
    box-shadow: 0 2px 5px -2px rgba(0, 0, 0, 0.05);
}

.card-title a {
    font-size: 24px;
    font-weight: 600;
}

.card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px 0 0;
}

.read-more {
    border: 1px solid #ddd;
    padding: 3px;
    border-radius: 3px;
}

.read-more:hover {
    background: #007fff;
    color: #fff;
}