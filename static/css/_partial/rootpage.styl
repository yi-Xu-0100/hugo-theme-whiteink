.rootpage {
    width: 70%;
    flex-basis: 70%;
    align-self: flex-start;
    overflow: hidden;
    margin: 0 auto;
}

.posts {
    background: #fff;
    margin-top: 24px;
    margin-right: 20px;
    padding: 20px;
    box-shadow: 0 2px 5px -2px rgba(0, 0, 0, 0.05);
}

.card-title a {
    font-size: 24px;
    font-weight: 600;
}

.card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px 0 0;
}

.read-more {
    border: 1px solid #ddd;
    padding: 3px;
    border-radius: 3px;
}

.read-more:hover {
    background: #000;
    color: #fff;
}